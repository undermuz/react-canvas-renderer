{
    "compilerOptions": {
        "checkJs": false,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "target": "es2020",
        "baseUrl": "./src",
        "module": "ES2022",
        "outDir": "./build",
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "jsx": "react-jsx"
    },
    "exclude": [
        "dist",
        "node_modules",
        "build",
        ".vscode",
        "coverage",
        ".npm",
        ".yarn"
    ],
    "include": ["src/**/*"],
    "typeAcquisition": {
        "enable": true,
        "include": ["node"]
    },
    "jsx": "react-jsx"
}
