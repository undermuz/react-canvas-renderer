{
    "compilerOptions": {
        "checkJs": false,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "target": "es2020",
        "module": "ESNext",
        "outDir": "./build",
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "jsx": "react-jsx",
        "declaration": true,
        "paths": {
            "@undermuz/react-canvas-renderer": ["../../package/build"],
            "react": ["../../package/node_modules/react"]
        }
    },
    "exclude": [
        "dist",
        "node_modules",
        "build",
        ".vscode",
        "coverage",
        ".npm",
        ".yarn"
    ],
    "include": ["src/**/*"],
    "typeAcquisition": {
        "enable": true,
        "include": ["node"]
    }
}
